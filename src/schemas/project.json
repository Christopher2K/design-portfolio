{
    "Main": {
        "uid": {
            "type": "UID",
            "config": {
                "label": "Identifiant unique du projet",
                "placeholder": "projet-1"
            }
        },
        "number": {
            "type": "Number",
            "config": {
                "label": "Numero de projet",
                "placeholder": "Ordre d'affichage"
            }
        },
        "name": {
            "type": "Text",
            "config": {
                "label": "Nom du projet",
                "placeholder": "Nom du projet"
            }
        },
        "year": {
            "type": "Text",
            "config": {
                "label": "Année du projet",
                "placeholder": "2021"
            }
        },
        "category_list": {
            "type": "Group",
            "config": {
                "fields": {
                    "category": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "Identité visuelle",
                                "Identité digitale",
                                "Site internet",
                                "Application mobile",
                                "Édition",
                                "Lettrage",
                                "Muséographie"
                            ],
                            "label": "Category",
                            "placeholder": "Catégorie du projet"
                        }
                    }
                },
                "label": "Liste de catégories"
            }
        },
        "thumbnail": {
            "type": "Image",
            "config": {
                "constraint": {},
                "thumbnails": [],
                "label": "Image de miniature"
            }
        }
    },
    "Contenu": {
        "description_fr": {
            "type": "StructuredText",
            "config": {
                "multi": "paragraph, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, list-item, o-list-item",
                "allowTargetBlank": true,
                "label": "Description du projet en francais"
            }
        },
        "description_en": {
            "type": "StructuredText",
            "config": {
                "multi": "paragraph, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, list-item, o-list-item",
                "allowTargetBlank": true,
                "label": "Description du projet en anglais"
            }
        },
        "assets": {
            "type": "Group",
            "config": {
                "fields": {
                    "image": {
                        "type": "Image",
                        "config": {
                            "constraint": {},
                            "thumbnails": [],
                            "label": "Image"
                        }
                    },
                    "type": {
                        "type": "Select",
                        "config": {
                            "options": [
                                "image",
                                "video"
                            ],
                            "label": "Type de fichier"
                        }
                    },
                    "video_link": {
                        "type": "Link",
                        "config": {
                            "label": "Lien de la video",
                            "placeholder": "Lien de la video"
                        }
                    }
                },
                "label": "Fichiers liés"
            }
        }
    }
}